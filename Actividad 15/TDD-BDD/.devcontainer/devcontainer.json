{ // Define la configuración específica del entorno dentro del contenedor
    // Nombre del entorno
    "name": "Lerzundi",
    // Ruta del dockerfile
    "dockerFile": "Dockerfile",
    "context": "..",
    "remoteUser": "lerzundi",
    "workspaceFolder": "/project",
    "workspaceMount": "source=${localWorkspaceFolder},target=/project,type=bind,consistency=delegated",
    // Argumentos adicionales
    "runArgs": [
        // Establece el hostname del contenedor
        "-h",
        "lerzundi"
    ],
    "remoteEnv": {
        // Activa el modo de depuración de FLASK
        "FLASK_DEBUG": "true",
        "FLASK_APP": "counter:app",
        "PORT": "5000",
        "PYTHONIOENCODING": "utf-8"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "VisualStudioExptTeam.vscodeintellicode",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "CucumberOpen.cucumber-official",
                "hnw.vscode-auto-open-markdown-preview",
                "donjayamanne.githistory",
                "GitHub.vscode-pull-request-github",
                "hbenl.vscode-test-explorer",
                "njpwerner.autodocstring",
                "cstrap.flask-snippets",
                "wholroyd.jinja",
                "redhat.vscode-yaml",
                "ms-azuretools.vscode-docker",
                "streetsidesoftware.code-spell-checker"
            ]
        }
    },
    // Después de crear el contenedor se instalan las dependencias
    "postCreateCommand": "sudo pip install -r requirements.txt",
    "features": {
        "docker-in-docker": "latest"
    }
}